$TextFont = $main-font
$TextSize = $font-size

html
  height 100%
  box-sizing border-box
  outline none

html.no-scroll
  overflow hidden

*, 
*:before,
*:after
  outline none
  -webkit-box-sizing inherit
  box-sizing inherit

body
  display flex
  flex-direction column
  min-height 100%
  padding 0
  margin 0
  font-family $TextFont
  font-size $TextSize
  line-height round($TextSize * 1.7)
  font-weight 300
  font-feature-settings 'pnum' on, 'lnum' on
  letter-spacing 0
  scroll-behavior smooth
  +min-max-w(1px, $mob-l)
    font-size ($TextSize - 2px)
    line-height round(($TextSize - 2px) * 1.7)
  +min-max-w(1px, $mob-l)
    padding-bottom 60px

button 
  font-family $TextFont

html, body
  overflow-x hidden

body
  background-color $body-bg
  .container.bg
    background-color $body-alt-bg
  
body.alternative
  background-color $body-alt-bg
  .container.bg
    background-color $body-bg

body.no-scroll
  overflow hidden

.main-content
  -webkit-box-flex 1
  -ms-flex-positive 1
  flex-grow 1

  &.padded
    padding-top 83px
    +min-max-w($lap-s + 1, $lap-m)
      padding-top 80px
    +min-max-w(1px, $lap-s)
      padding-top 60px

.std-section
  .container
    width 100%
    max-width $content-zone + ($content-padding * 2)
    padding-left $content-padding
    padding-right $content-padding
    padding-top 10px
    padding-bottom 10px
    margin 0 auto
    // +min-max-w(1px, $tab)
    //   padding-left ($content-padding / 2)
    //   padding-right ($content-padding / 2)

.full-section
  .container
    width 100%
    max-width 100%
    padding-top 10px
    padding-bottom 10px

.divider
  width 100%
  height 0

  &.d-0
    padding 0

  &.d-5
    padding 5px 0 0

  &.d-10
    padding 5px 0

  &.d-15
    padding 10px 0 5px

  &.d-20
    padding 10px 0

  &.d-25
    padding 15px 0 10px

  &.d-30
    padding 15px 0

  &.d-35
    padding 20px 0 15px 

  &.d-40
    padding 20px 0

  &.d-45
    padding 25px 0 20px

  &.d-50
    padding 25px 0
  
  &.m-0
