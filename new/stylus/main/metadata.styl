$metadata-text-color          = #ffffff
$metadata-link-color          = #ffffff
$metadata-link-color--hover   = #ffffff
$metadata-btn-bg-color        = $primary-color-2
$metadata-btn-bg-color--hover = $primary-color-2-hover

.metadata-warning
  z-index 300
  position fixed
  bottom 20px
  right 20px
  display flex
  width calc(100% - 40px)
  max-width 1200px
  border-radius 15px
  background-color $primary-color
  opacity 1
  visibility visible
  outline none
  overflow hidden
  transition opacity .3s ease
  +min-max-w(1px, $lap-s)
    flex-direction column

  &.sleep
    z-index -1
    opacity 0
    visibility hidden

  &__text
    width 85%
    padding .75rem 1.75rem .75rem 1.25rem
    color $metadata-text-color
    font-size 14px
    +min-max-w(1px, $lap-s)
      width 100%
      font-size 0.75rem

    & a
      border-bottom 1px solid $metadata-link-color
      color $metadata-link-color
      text-decoration none
      transition border-color .3s ease, color .3s ease, 

      &:hover
        +min-w($tab)
          color $metadata-link-color--hover
          border-color $metadata-link-color--hover

      &:visited
        color $metadata-link-color
        border-color $metadata-link-color
        &.active,
        &:active,
        &:focus:focus-visible
          color $link-main-active
          border-color $link-main-active

      &.active,
      &:active,
      &:focus:focus-visible,
        color $link-main-active
        border-color $link-main-active

  &__btn
    width 14%
    display flex
    flex-grow 1
    justify-content center
    align-items center
    background $primary-color-2
    font-size 1.5rem
    font-weight 700
    color $primary-color-2-text
    outline none
    cursor pointer
    transition all .3s ease-in-out
    +min-max-w(1px, $lap-s)
      width 100%
      padding-top 10px
      padding-bottom 10px
      font-size 1.25rem
      
    &:active
      background $primary-color-2-hover
      color $primary-color-2-hover-text
      text-decoration none

    &:hover
      +min-w(920px)
        text-decoration none
        background $primary-color-2-hover
        color $primary-color-2-hover-text