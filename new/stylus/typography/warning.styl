$blockColor = #EA7635

p.warning-block
  position relative
  display flex
  align-items center
  width fit-content
  padding 19px 25px 21px 80px
  background-color $blockColor
  color #ffffff
  +min-max-w(1px, $tab)
    padding-top 10px
    padding-bottom 10px
    padding-left 46px
    padding-right 10px
    line-height 26px

  &:after
    content ""
    position absolute
    top 50%
    left 25px
    display block
    width 38px
    height 35px
    background url("/assets/front/img/icons/warning.svg") center center no-repeat
    background-size contain
    transform translateY(-50%)
    +min-max-w(1px, $tab)
      top 9px
      left 10px
      width 26px
      height 26px
      transform translateY(0)