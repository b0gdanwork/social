$hFont = $main-font

$h1Size = 96px
$h2Size = 55px
$h3Size = 36px
$h4Size = 20px
$h5Size = 18px
$h6Size = 16px

$hWeight = 300
$hWeightThin = 300

.content .h1, .content h1, .h1, h1,
.content .h2, .content h2, .h2, h2,
.content .h3, .content h3, .h3, h3,
.content .h4, .content h4, .h4, h4,
.content .h5, .content h5, .h5, h5,
.content .h6, .content h6, .h6, h6
  margin-top 0
  margin-bottom 1rem
  letter-spacing 0
  font-family $main-font
  font-weight $hWeight
  font-feature-settings 'pnum' on, 'lnum' on
  +min-max-w(1px, $mob-l)
    margin-bottom 0.5rem
    font-weight 400

    
  &.thin
    font-weight $hWeightThin
    
.content .h1, .content h1, .h1, h1
  font-size $h1Size
  line-height round($h1Size * 1.2)
  +min-max-w($mob-l + 1px, $lap-l)
    font-size round($h1Size * 0.65)
    line-height round(($h1Size * 0.65) * 1.1)
  +min-max-w(1px, $mob-l)
    font-size round($h1Size * 0.37)
    line-height round(($h1Size * 0.4) * 1.1)

.content .h2, .content h2, .h2, h2
  font-size $h2Size
  line-height round($h2Size * 1.15)
  +min-max-w($mob-l + 1px, $lap-l)
    font-size round($h2Size * 0.65)
    line-height round(($h2Size * 0.65) * 1.1)
  +min-max-w(1px, $mob-l)
    font-size round($h2Size * 0.5)
    line-height round(($h2Size * 0.5) * 1.1)

.content .h3, .content h3, .h3, h3
  font-size $h3Size
  line-height round($h3Size * 1.1)
  +min-max-w($mob-l + 1px, $lap-l)
    font-size round($h3Size * 0.85)
    line-height round(($h3Size * 0.85) * 1.1)
  +min-max-w(1px, $mob-l)
    font-size round($h3Size * 0.7)
    line-height round(($h3Size * 0.7) * 1.1)

.content .h4, .content h4, .h4, h4
  font-size $h4Size
  line-height round($h4Size * 1.1)
  +min-max-w($mob-l + 1px, $lap-l)
    font-size round($h4Size * 0.85)
    line-height round(($h4Size * 0.85) * 1.1)
  +min-max-w(1px, $mob-l)
    font-size round($h4Size * 0.7)
    line-height round(($h4Size * 0.7) * 1.1)

.content .h5, .content h5, .h5, h5
  font-size $h5Size
  line-height round($h5Size * 1.1)
  +min-max-w($mob-l + 1px, $lap-l)
    font-size round($h5Size * 0.85)
    line-height round(($h5Size * 0.85) * 1.1)
  +min-max-w(1px, $mob-l)
    font-size round($h5Size * 0.7)
    line-height round(($h5Size * 0.7) * 1.1)

.content .h6, .content h6, .h6, h6
  font-size $h6Size
  line-height round($h6Size * 1.1)
  +min-max-w($mob-l + 1px, $lap-l)
    font-size round($h6Size * 0.85)
    line-height round(($h6Size * 0.85) * 1.1)
  +min-max-w(1px, $mob-l)
    font-size round($h6Size * 0.7)
    line-height round(($h6Size * 0.7) * 1.1)