$TextFont = $main-font
$TextSize = $font-size
$TextWeight = 300

$thTextColor = #000000
$thBgColor = #c7c7c7

$table-striped-background-color = #f5f5f5
$table-tr-hover-background-color = #f5f5f5

$table-cell-padding = 6px 20px
$table-cell-padding-mob = 10px 10px

$table-th-vertical-align = middle
$table-th-text-align = left
$table-th-font-weight = 600

$table-td-vertical-align = middle
$table-td-text-align = left

$table-border-width = 1px 
$table-border-style = solid
$table-border-color = #000000
$table-border-collapse = collapse

.content

  table, th, td
    border-width $table-border-width
    border-style $table-border-style
    border-color $table-border-color
    border-collapse $table-border-collapse

table.table,
.content table
  width 100%
  border-spacing 1px 1px
  margin-bottom 1rem
  table-layout fixed
  font-family $TextFont
  font-size $TextSize
  +min-max-w(1px, $mob-l)
    font-size ($TextSize - 2px)
    line-height round(($TextSize - 2px) * 1.7)

  &.table-striped
    & tr:nth-child(even)
      background-color $table-striped-background-color

  & th
    padding $table-cell-padding
    background-color $thBgColor
    color $thTextColor
    font-weight $table-th-font-weight
    text-align $table-th-text-align
    vertical-align $table-th-vertical-align
    +min-max-w(1px, $mob-l)
      padding $table-cell-padding-mob

  & td
    padding $table-cell-padding
    font-weight $TextWeight
    text-align $table-td-text-align
    vertical-align $table-td-vertical-align
    +min-max-w(1px, $mob-l)
      padding $table-cell-padding-mob

.responsive-table
  position relative
  max-width 100%
  margin-left auto
  margin-right auto
  margin-bottom 1rem
  overflow-x auto
  
  table
    margin-bottom 0
    +min-max-w(1px, $tab)
      width $tab