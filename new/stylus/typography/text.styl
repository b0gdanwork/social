$TextFont = $main-font
$TextSize = $font-size

.content p, .p
  margin-top 0
  margin-bottom 1rem
  color $text-color
  font-family $TextFont
  font-size $TextSize
  line-height round($TextSize * 1.3)
  font-weight 300
  letter-spacing 0
  +min-max-w(1px, $mob-l)
    font-size ($TextSize - 2px)
    line-height round(($TextSize - 2px) * 1.3)

.content .lead,
.lead
  font-size round($TextSize * 1.2)
  line-height round($TextSize * 1.2 * 1.5)
  +min-max-w(1px, $mob-l)
    font-size (round($TextSize * 1.2) - 2px)
    line-height round((($TextSize * 1.2) - 2px) * 1.5)

.content .comment,
.comment
  font-style italic

.content .small,
.small
  font-size $font-size * 0.8

sup, 
sub
  font-size 0.5rem
  line-height 0.5rem