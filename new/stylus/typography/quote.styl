$TextFont = $main-font
$TextSize = $font-size + 2px

$QuoteWidth = 700px

.content
  & blockquote
    z-index 1
    position relative
    display flex
    flex-direction column
    align-items flex-start
    justify-content center
    width 100%
    max-width $QuoteWidth
    padding 15px 35px
    margin 0
    overflow hidden
    +min-max-w(1px, $tab)
      padding-left 25px
      padding-right 25px

    & p
      z-index 3

    &:before
      z-index 1
      content ''
      position absolute
      top 0
      left 0
      display block
      width 4px
      height 100%
      background-color #cccccc

    span
      z-index 1
      font-family $TextFont
      font-size $TextSize
      line-height round($TextSize * 1.3)
      +min-max-w(1px, $mob-l)
        font-size ($TextSize - 2px)
        line-height round(($TextSize - 2px) * 1.3)

      &:nth-child(1)
        margin-bottom 0.8rem

    &.wide
      max-width 100%